
@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0 ,user-scalable=no" />
    <link href="~/Scripts/plugin/LayerUi/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/plugin/LayerUi/layui.js"></script>
    <title>注册-文宇轩</title>
    <style type="text/css">
          body {
            background-image: url('../../Content/Image/bg.jpg');
        }
         .main {
             height: 300px;
             padding: 20px 40px 0 0;
             width: 400px;
             margin: 150px auto;
             -webkit-box-shadow: #666 0px 0px 10px;
             -moz-box-shadow: #666 0px 0px 10px;
             box-shadow: #666 0px 0px 10px;
             border-radius: 3px;
         }

        .mian .title {
            text-align: center;
        }

        .mian form {
            height: 100%;
            width: 100%;
            margin: 10px auto;
        }
    </style>
</head>
<body>
<div class="main">
    <form class="layui-form" id="registerform">
        <div class="layui-form-item">
            <label class="layui-form-label">用户名</label>
            <div class="layui-input-block">
                <input type="text" name="Name" lay-verify="required|name" autocomplete="off" placeholder="请输入用户名" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">手机号</label>
            <div class="layui-input-block">
                <input type="text" name="Mobile" lay-verify="required|phone" placeholder="请输入手机号" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">密码</label>
            <div class="layui-input-block">
                <input type="password"  lay-verify="required|pass" placeholder="请输入密码" autocomplete="off" class="layui-input registerPwd">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">确认密码</label>
            <div class="layui-input-block">
                <input type="password" name="PassWord" lay-verify="required|Okpass" placeholder="请再次确认密码" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button type="submit" data-mode="register" class="layui-btn" lay-submit="" lay-filter="submit" >立即注册</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                <a href="/auth/login" class="layui-btn layui-btn-primary">返回登录</a>
            </div>
        </div>
    </form>
</div>
    <script src="~/Scripts/plugin/LayerUi/layui.js"></script>
    <script src="~/Scripts/plugin/bootstrap/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/global.js"></script>
    <script src="~/Scripts/App/Auth.js"></script>
</body>
</html>
